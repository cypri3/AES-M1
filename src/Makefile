# Variables
CFLAGS = -Wall -Wextra
CPPFLAGS = -I ../include/
LDFLAGS = #-lm bibli math

# Targets
all: AES

AES: AES.o utils.o multiplication_table.o AES_fun.o multi_threading.o ECB.o CBC.o CFB.o GCM.o
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -o ../AES AES.o utils.o multiplication_table.o AES_fun.o multi_threading.o ECB.o CBC.o CFB.o GCM.o

AES.o: AES.c ../include/AES.h ../include/utils.h ../include/multiplication_table.h ../include/AES_fun.h ../include/multi_threading.h ../include/ECB.h ../include/CBC.h ../include/CFB.h ../include/GCM.h 
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c AES.c

utils.o: utils.c ../include/utils.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c utils.c

multiplication_table.c: multiplication_table.c ../include/multiplication_table.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c multiplication_table.c

AES_fun.o: AES_fun.c ../include/AES_fun.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c AES_fun.c

multi_threading.o: multi_threading.c ../include/multi_threading.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c multi_threading.c

ECB.o: ECB.c ../include/ECB.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c ECB.c

CBC.o: CBC.c ../include/CBC.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c CBC.c

CFB.o: CFB.c ../include/CFB.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c CFB.c

GCM.o: GCM.c ../include/GCM.h
	gcc -O3 $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c GCM.c



clean:
	rm -f *.o ../AES

help:
	@echo "Targets available:"
	@echo "  all    : generate the AES binary file from the source files"
	@echo "  clean  : remove all temporary files + binary file generated by the compilation"
	@echo "  help   : display the targets of the Makefile with a short description"

.PHONY: all clean help
